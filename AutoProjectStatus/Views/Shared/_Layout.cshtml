<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    @RenderSection("scripts", required: false)



    @Scripts.Render("~/bundles/jquery")

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.8/angular.min.js"></script>
    <script src="~/Scripts/ui-bootstrap-tpls-0.11.0.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <title>@ViewBag.Title - Automotive Project Status</title>



</head>
<body>
    <nav class="navbar fixed-top navbar-light bg-primary">
        @Html.ActionLink("Automotive Project Status", "Index", "Home", new { area = "" }, new { @class = "navbar-brand text-white" })
    </nav>
    <div class="body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Automotive Project Status</p>
        </footer>
    </div>



    
    <script src="~/Content/angularjs/StatusTableController.js"></script>
</body>

</html>
